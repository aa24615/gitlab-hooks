{
    "name": "zyan/gitlab-hooks",
    "keywords": ["gitlab", "企业微信群", "钉钉群", "gitlab推送", "gitlab消息", "gitlab钩子","飞书群"],
    "description": "gitlab消息推送到企业微信群,钉钉群",
    "license": "MIT",
    "authors": [
        {
            "name": "读心印",
            "email": "aa24615@qq.com"
        }
    ],
    "require": {
        "php": ">=7.2",
        "guzzlehttp/guzzle": "~6.0|~7.0",
        "ext-json": "*"
    },
    "autoload": {
        "psr-4": {
            "Zyan\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.4.4"
    },
    "extra": {

    },
    "scripts": {
        "fix": "php-cs-fixer fix --using-cache=no --ansi",
        "test": "vendor/bin/phpunit --colors=always"
    },
    "scripts-descriptions": {
        "test": "Run all tests.",
        "fix": "Run style checks and fix violations."
    }
}